{
    "compilerOptions": {
        "lib": ["es6", "es7", "esnext"],
        "sourceMap": false,
        "target": "es6",
        "module": "commonjs",
        "moduleResolution": "node",
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "strict": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "typeRoots": [
            "./node_modules/@types",
            "./node_modules/iina-plugin-definition"
        ],
        "types": [
            "iina-plugin-definition"
        ],
        "outDir": "./dist",
        "rootDir": "./src"
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "node_modules",
        "dist",
        "node_modules/iina-plugin-definition/pages"
    ],
    "compileOnSave": false
}
  